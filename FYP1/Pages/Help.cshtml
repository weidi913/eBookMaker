<script>
    $(document).ready(function(){
        $(".help-faq-question-text p").addClass("hidden");
        $("#create-button").click(function(){
            window.location.href = '/eBooks/Dashboard';
        })

        $(".help-faq-question-text b").click(function(){
            $(this).next("p").toggleClass("hidden");
        })

        $(".help-banner-textinput").on("input", function () {
            var text = $(this).val().toLowerCase().trim(); // Get the entered text and convert it to lowercase
            $(".help-faq-question-text b").each(function () { // Loop through each FAQ question
                var filter = $(this).text().toLowerCase();
                if (!filter.includes(text)) { // Check if the question text contains the entered text
                    $(this).closest("span").addClass("hidden"); // Hide the parent div if the text doesn't match
                    $(this).closest("span").removeClass("unhidden"); // Hide the parent div if the text doesn't match

                } else {
                    $(this).closest("span").removeClass("hidden"); // Otherwise, show the parent div
                    $(this).closest("span").addClass("unhidden"); // Hide the parent div if the text doesn't match

                }
            });
        });

    })
</script>