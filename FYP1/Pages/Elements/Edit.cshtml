@page
@model FYP1.Pages.Elements.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Element</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Element.elementID" />
            <div class="form-group">
                <label asp-for="Element.elementType" class="control-label"></label>
                <input asp-for="Element.elementType" class="form-control" />
                <span asp-validation-for="Element.elementType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Element.elementLock" /> @Html.DisplayNameFor(model => model.Element.elementLock)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Element.elementStyle" class="control-label"></label>
                <input asp-for="Element.elementStyle" class="form-control" />
                <span asp-validation-for="Element.elementStyle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Element.z_index" class="control-label"></label>
                <input asp-for="Element.z_index" class="form-control" />
                <span asp-validation-for="Element.z_index" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Element.text" class="control-label"></label>
                <input asp-for="Element.text" class="form-control" />
                <span asp-validation-for="Element.text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Element.bookPageID" class="control-label"></label>
                <select asp-for="Element.bookPageID" class="form-control" asp-items="ViewBag.bookPageID"></select>
                <span asp-validation-for="Element.bookPageID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
