        <div class="profile-page-profile-container">
            <div class="profile-page-welcome-background"></div>
            @if (Model.curUser != null && !string.IsNullOrEmpty(Model.curUser.imageData))
            {
                <div class="profile-page-profile-image" style="background-image: url(data:image/jpg;base64,@Model.curUser.imageData)"></div>
            }
            else
            {
                <div class="profile-page-profile-image"></div>
            }

            <span class="profile-page-profile-title">Welcome @Model.curUser.lastName @Model.curUser.firstName</span>
            <span class="profile-page-profile-subtitle">
                Embark on your profile journey today and enjoy the experience!
            </span>
